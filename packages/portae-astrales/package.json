{
  "name": "@aetherisnova/portae-astrales",
  "version": "1.0.0",
  "private": false,
  "description": "The Portae Astrales schema allows the construction of a great Porta of Aetheris Nova facilitating the safe traversal of the Aether.",
  "repository": {
    "type": "git",
    "url": "https://github.com/aetheris-nova/structura-contractus"
  },
  "license": "CC0-1.0",
  "type": "module",
  "main": "dist/client/index.js",
  "types": "dist/client/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm build:contracts && pnpm build:client",
    "build:client": "pnpm run clean:client && vite build",
    "build:contracts": "pnpm clean:contracts && forge build",
    "build:dependencies": "./scripts/prebuild.sh",
    "clean": "shx rm -rf dist/client && shx rm -rf tsconfig.*.tsbuildinfo",
    "clean:client": "shx rm -rf dist/client && shx rm -rf tsconfig.*.tsbuildinfo",
    "clean:contracts": "forge clean && shx rm -rf src/**/codegen",
    "generate:index": "tsx ./scripts/generate-index.ts",
    "lint": "concurrently --names \"CLIENT,CONTRACTS\" -c \"yellow.bold,magenta.bold\" \"pnpm lint:client\" \"pnpm lint:contracts\"",
    "lint:client": "eslint .",
    "lint:contracts": "solhint --config .solhint.json \"src/**/*.sol\"",
    "postinstall": "forge soldeer install",
    "prettier": "prettier --write \"**/*.{js,json,sol,ts}\"",
    "test": "pnpm test:contracts && pnpm test:client",
    "test:client": "pnpm -F @aetherisnova/sigillum build && pnpm build:contracts && vitest run --config vitest.config.ts",
    "test:contracts": "forge test"
  },
  "dependencies": {
    "@latticexyz/cli": "2.2.14",
    "@latticexyz/schema-type": "2.2.14",
    "@latticexyz/store": "2.2.14",
    "@latticexyz/store-indexer": "2.2.14",
    "@latticexyz/explorer": "2.2.14",
    "@latticexyz/world": "2.2.14",
    "@latticexyz/world-modules": "2.2.14",
    "@eveworld/common-constants": "0.0.13",
    "@eveworld/world": "0.0.17"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "chalk": "^5.3.0",
    "concurrently": "^9.1.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "ethers": "^6.13.4",
    "globals": "^15.13.0",
    "prettier-plugin-solidity": "^1.4.1",
    "solhint": "^5.0.3",
    "solhint-config-mud": "2.2.9",
    "solhint-plugin-mud": "2.2.9",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0",
    "vite": "^6.0.3",
    "vite-plugin-dts": "^4.3.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "ethers": "^6.13.4"
  }
}
